{% extends 'base.html.twig' %}

{% block title %}Hello AreaController!{% endblock %}

{% block body %}
    <div class="container text-center">
        <div class="row mt-3 mb-3">
            <div class="col-12">
                <h1> liste des différentes zones</h1>
            </div>
            <div class="col-12">
                <a href="{{ path('new_timeslot') }}"><button type="button" class="btn btn-outline-success">Ajouter une zone</button></a>
            </div>
            <div class="row">
                <div class="col-5"> Nom de la zone </div>
                <div class="col-5"> Tarif </div>
                <div class="col-2"> Gestion </div>

            </div>

            <div class="row">
                {% if areas is not empty %}
                {% for area in areas %}
                    <div class="col-5"> {{ area.name }} </div>
                    <div class="col-5"> {{ area.price }} €</div>
                    <div class="col-2">
                        <a href=""><button type="button" class="btn btn-outline-success">Modifier</button></a>
                        <a href=""><button type="button" class="btn btn-outline-success">Supprimer</button></a>
                    </div>
                {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
